<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.mrfiring.covidmvi.presentation.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_globalDetailFragment"
            app:destination="@id/globalDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/globalDetailFragment"
        android:name="ru.mrfiring.covidmvi.presentation.ui.globaldetailscreen.GlobalDetailFragment"
        android:label="fragment_global"
        tools:layout="@layout/fragment_global" />
</navigation>